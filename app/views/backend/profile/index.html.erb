<h2><%= @current_user.fullname %></h2>
<p>User profile completion percentage: <%= number_to_percentage @profile.user_profile_percentage, precision: 1 %></p>
<% if @current_user.provider? %>
<p>Business profile completion percentage: <%= number_to_percentage @profile.business_profile_percentage,precision: 1 %></p>
<% end %>
<ul>
  <li><%= link_to 'View/Update User Profile', edit_user_registration_path %></li>
  <%= render partial: "#{params[:controller]}/links/#{@current_user.role.downcase}" %>
  <li><%= link_to 'Logout', destroy_user_session_path, 'data-method' => 'delete' %></li>
</ul>